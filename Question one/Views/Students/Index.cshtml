@model List<Question_one.Models.Student>

<h2>Student List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>Roll No</th>
            <th>Name</th>
            <th>Stream</th>
            <th>Marks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.RollNo</td>
                <td>@student.Name</td>
                <td>@student.Stream</td>
                <td>@student.Marks</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = student.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = student.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure you want to delete this student?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

